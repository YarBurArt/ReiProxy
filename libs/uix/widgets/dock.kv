<BottomDock>:
    size_hint_y: None
    height: dp(55)
    padding: dp(8)
    spacing: dp(12)
    canvas.before:
        Color:
            rgba: (0.1, 0.1, 0.1, 0.95)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(dp(20), dp(20)), (dp(20), dp(20)), (0, 0), (0, 0)]
    Widget:

    MDIconButton:
        icon: "home"
        user_font_size: "28sp"
        on_release: app.root.push("home")

    MDIconButton:
        icon: "repeat"
        user_font_size: "28sp"
        on_release: app.root.push("repeater", side="left")

    MDIconButton:
        icon: "history"
        user_font_size: "28sp"
        on_release: app.root.push("history", side="left")

    MDIconButton:
        icon: "shield"
        user_font_size: "28sp"
        on_release: app.root.push("tools", side="left")

    Widget: