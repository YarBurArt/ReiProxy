<HistoryListItem>:
    size_hint_y: None
    height: dp(35)
    md_bg_color: [1, 1, 1, 0.1] if root.is_selected else [0, 0, 0, 0]
    on_release: root.dispatch_selection()

    MDBoxLayout:
        orientation: "horizontal"
        padding: [dp(10), 0]
        spacing: dp(5)

        MDLabel:
            text: str(root.req_id)
            size_hint_x: None
            width: dp(40)
            theme_text_color: "Primary"
        MDLabel:
            text: root.req_method
            size_hint_x: None
            width: dp(70)
            theme_text_color: "Custom"
            text_color: root.method_color
            bold: True
        MDLabel:
            text: root.req_host
            size_hint_x: None
            width: dp(150)
            shorten: True
        MDLabel:
            text: root.req_path
            size_hint_x: 1
            shorten: True
            shorten_from: "right"
        MDLabel:
            text: str(root.res_status)
            size_hint_x: None
            width: dp(60)
            theme_text_color: "Custom"
            text_color: root.status_color
        MDLabel:
            text: root.duration
            size_hint_x: None
            width: dp(70)
        MDLabel:
            text: root.mime
            size_hint_x: None
            width: dp(100)